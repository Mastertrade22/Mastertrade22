# file load ----
import os
def load_file(path):
      
      file_extension = os.path.splitext(path)[1]
      df1=pd.DataFrame()
      if file_extension=='.json':
            df1=pd.read_json(path)
      elif file_extension=='.csv':
            df1=pd.read_csv(path)
            df1.drop('Unnamed: 0',inplace=True,axis=1)
      
      print(file_extension)
      return df1
